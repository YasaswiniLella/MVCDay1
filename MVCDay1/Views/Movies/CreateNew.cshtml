@model MVCDay1.ViewModel.MovieViewModel
@{
    ViewBag.Title = "CreateNew";
}

<h2>Create New Movie</h2>
<div class="container">
    @*<div class="row">
        <div class="col-md-6">
            @Html.ValidationSummary(false, null, new { @class = "text-danger" })
         </div>
     </div>*@
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @Html.LabelFor(x => x.Movie.Name)
                            @Html.TextBoxFor(x => x.Movie.Name, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(x=>x.Movie.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Movie.DirectorName)
                            @Html.TextBoxFor(x => x.Movie.DirectorName, new { @class = "form-control", autocomplete = "off",placeholder="Director name" })
                            @Html.ValidationMessageFor(x=>x.Movie.DirectorName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Movie.ReleaseDate)
                            @Html.TextBoxFor(x => x.Movie.ReleaseDate, new { @class = "form-control", type = "date", autocomplete = "off"})
                            @Html.ValidationMessageFor(x=>x.Movie.ReleaseDate)
                        </div>
                        <div class="form-group" >
                            @Html.LabelFor(x => x.Movie.GenreId)
                            @*@Html.TextBoxFor(x => x.GenreId, new { @class = "form-control", autocomplete = "off" })*@
                            @*@Html.DropDownList("GenreId", ViewBag.GenreId as SelectList,"Select a genre", new { @class = "form-control" })*@
                            @Html.DropDownListFor(x=>x.Movie.GenreId,new SelectList(Model.GetGenres,"Id","GenreName"),"--Select--",new { @class = "form-control" })
                            @Html.ValidationMessageFor(x=>x.Movie.GenreId)
                        </div>
                        <div class="form-group">
                            <button id="CmdSubmit" type="submit" class="btn-dark">Create</button>
                        </div>
                    }
                </div>
            </div>
        </div>

