@model MVCDay1.ViewModel.CustomerViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Customer.Name)
                @Html.TextBoxFor(x => x.Customer.Name, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(x => x.Customer.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Customer.DateofBirth)
                @Html.TextBoxFor(x => x.Customer.DateofBirth, new { @class = "form-control", type = "date", autocomplete = "off" })
                @Html.ValidationMessageFor(x => x.Customer.DateofBirth)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Customer.Address)
                @Html.TextBoxFor(x => x.Customer.Address, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(x => x.Customer.Address)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Customer.Gender)
                @Html.DropDownListFor(x => x.Customer.Gender, new SelectList(Model.Gender, "Value", "Text"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Customer.MembershipId)
                @*@Html.TextBoxFor(x => x.GenreId, new { @class = "form-control", autocomplete = "off" })*@
                @*@Html.DropDownList("GenreId", ViewBag.GenreId as SelectList,"Select a genre", new { @class = "form-control" })*@
                @Html.DropDownListFor(x => x.Customer.MembershipId, new SelectList(Model.GetMembership, "Id", "MembershipType"), "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Customer.MembershipId)
            </div>
            <div class="form-group">
                <button id="CmdSubmit" type="submit" class="btn-dark">Edit</button>
            </div>
        }
    </div>
</div>

