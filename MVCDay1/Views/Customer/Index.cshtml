@model IEnumerable<MVCDay1.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h1>Customer Details</h1>
<h6 class="btn btn-dark">@Html.ActionLink("Add Customer", "Create", "Customer", null, new { @class = "nav-link" })</h6>

<hr />
<table class="table table-bordered table-hover">
    <tr>
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Action</th>
    </tr>
    
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Id</td>
            <td>@Html.ActionLink(customer.Name, "MembershipDetails", "Customer", new { id = customer.Id }, null)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Customer", new { id = customer.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "MembershipDetails", "Customer", new { id = customer.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>

    }
</table>


